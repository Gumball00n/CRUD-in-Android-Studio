<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="8dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#8DCBE6"
    android:layout_marginBottom="8dp"
    android:paddingLeft="5dp">

    <LinearLayout
        android:layout_marginBottom="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:text="Nama Barang"
            android:textSize="16dp"
            android:layout_width="40dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_weight="1"
            android:text=": "
            android:id="@+id/namaBarang"
            android:layout_width="40dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:text="Harga"
            android:textSize="16dp"
            android:layout_width="40dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_weight="1"
            android:text=": "
            android:id="@+id/hargaBarang"
            android:layout_width="40dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:text="Jumlah"
            android:textSize="16dp"
            android:layout_width="40dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_weight="1"
            android:text=": "
            android:id="@+id/jumlahBarang"
            android:layout_width="40dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:text="Diskon"
            android:textSize="16dp"
            android:layout_width="40dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_weight="1"
            android:text=": "
            android:id="@+id/diskonBarang"
            android:layout_width="40dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:text="Tanggal Beli"
            android:textSize="16dp"
            android:layout_width="40dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:text=": "
            android:id="@+id/tanggalBeli"
            android:layout_weight="1"
            android:layout_width="40dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:text="Nama Kasir"
            android:textSize="16dp"
            android:layout_width="40dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_weight="1"
            android:text=": "
            android:id="@+id/namaKasir"
            android:layout_width="40dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:text="Total Bayar"
            android:textSize="16dp"
            android:layout_width="40dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_weight="1"
            android:text=": "
            android:id="@+id/totalBayar"
            android:layout_width="40dp"
            android:layout_height="wrap_content" />
    </LinearLayout>


</LinearLayout>